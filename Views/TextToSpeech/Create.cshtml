@model TextToSpeechFrontEnd.Models.ViewModels.AudioInfoVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Crear un Audio</h2>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="Create" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AudioInfo.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AudioInfo.Name" class="form-control" />
                        <span asp-validation-for="AudioInfo.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AudioInfo.Text"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AudioInfo.Text" class="form-control" />
                        <span asp-validation-for="AudioInfo.Text" class="text-danger"></span>
                    </div>
                </div>

                 <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AudioInfo.Language"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AudioInfo.Language" class="form-control" />
                        <span asp-validation-for="AudioInfo.Language" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AudioInfo.gender"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="AudioInfo.gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AudioInfo.Descripcion"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AudioInfo.Descripcion" class="form-control" />
                        <span asp-validation-for="AudioInfo.Descripcion" class="text-danger"></span>
                    </div>
                </div>
               
                               
                <div class="form-group row">
                    <div class="col-8">
                        <input id="creationDate" type="text" asp-for="AudioInfo.CreationDate" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Crear Audio</button>
                    </div>

                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary form-control">Volver</a> 
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $('#creationDate').datepicker({
                changeMonth: false,
                changeYear: false,
                yearRange: "1500:2022",
                dateFormat: "yy-mm-dd"
            }).datepicker("setDate", new Date())
        })
    </script>
}




